generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  password String
  role     String
  job      String[]
}

model Sejarah {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  excerpt String?
  image   String
  content String?
  view    Int     @default(0)
}

model VisiMisi {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  excerpt String?
  image   String
  content String?
  view    Int     @default(0)
}

model Tentang {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  excerpt String?
  image   String
  content String?
  view    Int     @default(0)
}

model Berita {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  slug     String
  category String
  excerpt  String?
  image    String
  content  String?
  userId   String
  view     Int     @default(0)
}

model Kontak {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  excerpt String?
  image   String
  content String?
  view    Int     @default(0)
}

model Kategori {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
}

model Database {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  tahunMulai   String
  tahunSelesai String
  divisi       String
  jabatan      String
  image        String
  status       Boolean
  sosmed       Json?
}

model Jabatan {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
}

model Divisi {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
}

model Asrama {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String
  description String
  data        Json?
  view        Int    @default(0)
}
