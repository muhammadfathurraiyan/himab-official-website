generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String   @unique
  password String
  role     String
  job      String[]
}

model Sejarah {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  excerpt String?
  image   String
  content String?
  userId  String
}
